<!DOCTYPE html>
<html>
  <head>
    <title>Book Collection</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="styles/reset.css" rel="stylesheet"/>
    <link href="styles/base.css" rel="stylesheet"/>
    <link href="styles/layout.css" rel="stylesheet"/>
    <link href="styles/icons.css" rel="stylesheet"/>
    <link href="styles/modules.css" rel="stylesheet"/>
  </head>
  <body>
    <header>
      <h1>Best Books!</h1>
      <p><a href="/">Home</a></p>
    </header>
    <h2>Search Results</h2>
    <article>
      <% bookList.forEach(book => { %>
        <div>
        <img src=<%= book.url %> alt="bookcover">
        <h3><%= book.title %></h3>
        <h4><%= book.author %></h4>
        <p><%= book.description %></p>
        <button type="submit">Select this Book</button>
      </div>
      <% }) %>  
    </article>
    <form action='/searches' method='post'>
      <input type="text" name="title" placeholder="Enter a title or author" required>
      <input type="text" name="author" placeholder="Enter a title or author" required>
      <input type="text" name="ISBN" placeholder="Enter a title or author" required>
      <input type="text" name="image_url" placeholder="Enter a title or author" required>
      <input type="text" name="description" placeholder="Enter a title or author" required>
     
      <button type="submit">Search the Google Books API</button>
    </form>
    
  </body>
  
</html>
