<%- include('../../partials/head') %>

  <body>
    <main>
      <h6 id="searchTitle">Search for Books</h6>
      <!-- action visits the route and method is the route method -->
      <form action='/searches' method='post'>
        <input type="text" name="search" placeholder="Enter a title or author" required>
        <fieldset>
          <label for="title">
            <span>Title</span>
            <input type="radio" name="search" value="title" required>
          </label>
        </fieldset>
        <fieldset>
            <label for="author">
              <span>Author</span>
              <input type="radio" name="search" value="author" required>
            </label>
          </fieldset>
          <button type="submit">Search for Books </button>
      </form>
    </main>
  </body>
</html>
